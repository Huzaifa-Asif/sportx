<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="false"
    android:background="#fff"
    tools:context=".BookingActivity">


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin">






            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Enter Booking Details"
                android:textColor="@color/grey"
                android:layout_marginLeft="@dimen/_18sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:textStyle="bold"
                android:textSize="@dimen/_13sdp"
                android:id="@+id/details"
                />



            <Spinner
                android:backgroundTint="@color/colorPrimary"
                android:id="@+id/spinner1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_18sdp"
                android:layout_marginRight="@dimen/_8sdp"
                android:paddingStart="@dimen/_1sdp"
                android:paddingVertical="@dimen/_8sdp"
                android:entries="@array/bookingType"
                android:layout_below="@+id/details"

                android:paddingLeft="50dp"
                android:paddingRight="180dp" />

            <EditText
                android:backgroundTint="@color/colorPrimary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/in_date"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="@dimen/_18sdp"
                android:layout_marginRight="@dimen/_8sdp"
                android:focusable="false"
                android:hint="Select Date"
                android:textColorHint="@color/grey"
                android:layout_below="@+id/spinner1"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="@dimen/_10sdp"

                />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SELECT DATE"
                android:id="@+id/btn_date"
                android:onClick="DatePickerClick"
                android:layout_alignBottom="@+id/in_date"
                android:layout_alignEnd="@+id/in_date"
                android:background="@color/colorPrimary"
                android:textColor="#fff"
                android:paddingLeft="@dimen/_8sdp"
                android:paddingRight="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                 />

            <EditText
                android:backgroundTint="@color/colorPrimary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/in_time"
                android:layout_marginTop="4dp"
                android:focusable="false"
                android:hint="Select Time"
                android:textColorHint="@color/grey"
                android:layout_marginLeft="@dimen/_18sdp"
                android:layout_marginRight="@dimen/_8sdp"
                android:layout_below="@+id/in_date"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="@dimen/_10sdp"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SELECT TIME"
                android:id="@+id/btn_time"
                android:onClick="TimePickerClick"
                android:layout_below="@+id/btn_date"
                android:layout_alignEnd="@+id/btn_date"
                android:background="@color/colorPrimary"
                android:textColor="#fff"
                android:paddingLeft="@dimen/_10sdp"
                android:paddingRight="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                 />

        </RelativeLayout>



            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/register_button"
                android:layout_marginRight="@dimen/_18sdp"
                android:layout_marginLeft="@dimen/_18sdp"
                android:layout_marginTop="@dimen/_12sdp"
                android:background="@color/colorPrimary"
                android:text="Submit"
                android:textColor="#fff"
                android:layout_marginBottom="@dimen/_18sdp"
                />
        </LinearLayout>

        <!--</android.support.v4.widget.NestedScrollView>-->

        <!--</RelativeLayout>-->

</ScrollView>