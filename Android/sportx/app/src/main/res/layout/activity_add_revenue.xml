<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="16dp"
    android:paddingBottom="16dp"
    android:paddingRight="16dp"
    android:paddingLeft="16dp"
    android:orientation="vertical" >
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:paddingRight="16dp"
        android:paddingLeft="16dp"
        android:orientation="horizontal" >
        <TextView
            android:id="@+id/categoryField"
            android:text="Category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:width="100dp"
            android:height="@dimen/_30sdp"/>

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            />
        <EditText
            android:id="@+id/newCategory"
            android:hint="Enter New Category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:width="100dp"
            android:height="@dimen/_30sdp"/>

    </LinearLayout>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:paddingRight="16dp"
        android:paddingLeft="16dp"
        android:orientation="horizontal" >
        <TextView
            android:id="@+id/amountField"
            android:text="Amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:width="100dp"
            android:height="@dimen/_30sdp"/>
        <EditText
            android:id="@+id/amount"
            android:hint="Enter Amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:width="100dp"
            android:height="@dimen/_30sdp"/>
    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:paddingRight="16dp"
        android:paddingLeft="16dp"
        android:orientation="horizontal" >
        <TextView
            android:id="@+id/dateField"
            android:text="Date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:width="100dp"
            android:height="@dimen/_30sdp"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SELECT DATE"
            android:id="@+id/btn_date"
            android:layout_alignBottom="@+id/in_date"
            android:layout_alignEnd="@+id/in_date"
            android:background="@color/colorPrimary"
            android:textColor="#fff"
            />
        <EditText
            android:backgroundTint="@color/colorPrimary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/in_date1"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="@dimen/_18sdp"
            android:layout_marginRight="@dimen/_8sdp"
            android:focusable="false"
            android:hint="Select Date"
            android:textColorHint="@color/grey"
            android:layout_marginBottom="@dimen/_10sdp"

            />
    </LinearLayout>


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:paddingRight="16dp"
        android:paddingLeft="16dp"
        android:orientation="horizontal" >
        <TextView
            android:id="@+id/descriptionField"
            android:text="Description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:width="100dp"
            android:height="@dimen/_30sdp"/>
        <EditText
            android:id="@+id/description"
            android:hint="Enter Dexcription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:width="200dp"
            android:height="75dp"/>
    </LinearLayout>
    <Button
        android:id="@+id/add"
        android:text="Add Revenue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:width="150dp"
        android:height="40dp"
        />
</LinearLayout>