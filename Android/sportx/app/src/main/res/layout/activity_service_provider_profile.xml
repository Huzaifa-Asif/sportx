<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#fff"
    android:layout_height="match_parent"
    tools:context=".service_provider_profile_Activity">


    <android.support.v7.widget.CardView
        android:id="@+id/card_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        app:cardCornerRadius="@dimen/_10sdp"
        app:cardElevation="@dimen/_10sdp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Contact Details"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                android:textSize="@dimen/_12sdp"
                android:id="@+id/contact_details"
                />
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/comparebutton"
                android:src="@drawable/compare"
                android:padding="16dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"

                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/contact_details"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="Name: "
                android:layout_alignParentLeft="true"
                android:id="@+id/c_name"
                android:textSize="@dimen/_11sdp"
                android:textStyle="bold"
                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Service Category: "
                android:id="@+id/c_service"
                android:layout_below="@id/c_name"
                android:layout_marginTop="@dimen/_10sdp"
                android:textSize="@dimen/_11sdp"
                android:layout_marginRight="@dimen/_35sdp"
                android:textStyle="bold"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Address: "
                android:id="@+id/c_address"
                android:layout_below="@id/c_service"
                android:layout_marginTop="@dimen/_10sdp"
                android:textSize="@dimen/_11sdp"
                android:textStyle="bold"

                />






            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phone: "
                android:id="@+id/c_phone"
                android:layout_below="@id/c_address"
                android:layout_marginTop="@dimen/_10sdp"
                android:textSize="@dimen/_11sdp"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/c_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/c_phone"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_35sdp"
                android:text="Email: "
                android:textSize="@dimen/_11sdp"
                android:textStyle="bold" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_below="@id/c_email"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:text="Book Now !!"
                android:textColor="#fff"
                android:background="@color/colorPrimary"
                android:id="@+id/book"
                />



            <Button
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_30sdp"
                android:background="@color/colorPrimary"
                android:layout_below="@+id/book"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/_20sdp"
                android:text="Make Call"
                android:textColor="#fff"
                android:drawableLeft="@drawable/ic_call"
                android:paddingLeft="@dimen/_10sdp"
                android:paddingRight="@dimen/_10sdp"
                android:drawablePadding="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_12sdp"
                android:id="@+id/make_call"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_30sdp"
                android:background="@color/white"
                android:layout_below="@+id/book"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="@dimen/_20sdp"
                android:text="Send SMS"
                android:textColor="@color/colorPrimary"
                android:drawableLeft="@drawable/ic_comment"
                android:paddingLeft="@dimen/_10sdp"
                android:paddingRight="@dimen/_10sdp"
                android:drawablePadding="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_12sdp"
                android:id="@+id/message"
                />
        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/card_map"
        android:layout_below="@id/card_details"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        app:cardCornerRadius="@dimen/_10sdp"
        app:cardElevation="@dimen/_10sdp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_150sdp">

        <fragment
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/ip_map"
            android:name="com.google.android.gms.maps.SupportMapFragment"/>

    </android.support.v7.widget.CardView>




